<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="RealTimeNovelMapper">

	<select id="selectList" resultType="RTNovelDto">
		SELECT NOVEL_ID, NOVEL_REGDATE, NOVEL_CONTENT
		FROM REALTIMENOVEL 
		ORDER BY NOVEL_REGDATE
	</select>
	
	<insert id="insert" parameterType="RTNovelDto">
		INSERT INTO REALTIMENOVEL
		VALUES(NOVEL_SEQ.NEXTVAL, #{novel_id}, SYSDATE, #{novel_content})
	</insert>

</mapper>